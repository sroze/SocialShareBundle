<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="srozeio.social_share.builder.class">SRozeIO\SocialShareBundle\Social\ShareBuilder</parameter>
        <parameter key="srozeio.social_share.abstract_adapter.class">SRozeIO\SocialShareBundle\Social\Adapter\AbstractAdapter</parameter>
        <parameter key="srozeio.social_share.adapter.facebook.class">SRozeIO\SocialShareBundle\Social\Adapter\FacebookAdapter</parameter>
        <parameter key="srozeio.social_share.adapter.google.class">SRozeIO\SocialShareBundle\Social\Adapter\GooglePlusAdapter</parameter>
        <parameter key="srozeio.social_share.adapter.twitter.class">SRozeIO\SocialShareBundle\Social\Adapter\TwitterAdapter</parameter>
        <parameter key="srozeio.social_share.adapter.linkedin.class">SRozeIO\SocialShareBundle\Social\Adapter\LinkedInAdapter</parameter>
    </parameters>

    <services>
        <service id="srozeio.social_share.builder" class="%srozeio.social_share.builder.class%"></service>
        
        <!-- Abstract adapter -->
        <service id="srozeio.social_share.abstract_adapter" class="%srozeio.social_share.abstract_adapter.class%" abstract="true">
            <argument /> <!-- Name -->
            <argument /> <!-- Parameters -->
            <argument type="service" id="buzz" />
            <argument type="service" id="session" />
        </service>
        
        <!-- Abstract social adapters -->
        <service 
            id="srozeio.social_share.abstract_adapter.facebook" 
            class="%srozeio.social_share.adapter.facebook.class%"
            parent="srozeio.social_share.abstract_adapter"
            abstract="true" />
        
        <service 
            id="srozeio.social_share.abstract_adapter.google" 
            class="%srozeio.social_share.adapter.google.class%"
            parent="srozeio.social_share.abstract_adapter"
            abstract="true" />
        
        <service 
            id="srozeio.social_share.abstract_adapter.twitter" 
            class="%srozeio.social_share.adapter.twitter.class%"
            parent="srozeio.social_share.abstract_adapter"
            abstract="true" />
        
        <service 
            id="srozeio.social_share.abstract_adapter.linkedin" 
            class="%srozeio.social_share.adapter.linkedin.class%"
            parent="srozeio.social_share.abstract_adapter"
            abstract="true" />
        
        <!-- You can add you custom adapters like that -->
        <!-- <service id="srozeio.social_share.adapter.facebook" class="%srozeio.social_share.adapter.facebook.class%">
            <argument type="service" id="buzz" />
            <tag name="srozeio.social_share.adapter" />
        </service> -->
    </services>
</container>
